<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CResetPassword">


    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="Email has been sent!"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:justificationMode="inter_word"
        android:text="Please check your inbox and click on the received link to proceed"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivReset"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tvInformation"
        android:src="@drawable/receivedreset" />


    <TextView
        android:id="@+id/tvRemember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCLogin"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Didn't receive the link? Resend" />


    <Button
        android:id="@+id/btnCLogin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/ivReset"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttonbg"
        android:gravity="center"
        android:text="Login" />


</RelativeLayout>